<div class="col col-6 mx-auto text-dark">
	<h2 class="mt-3"><%= @event.title %></h2>

	<%= image_tag @event.picture, alt: 'picture', size: "200x250", class: "col mx-auto" %>

	<ul class="list-group list-group-flush mb-3 mt-3">
		<li class="list-group-item">Description: <%= @event.description %></li>
		<li class="list-group-item">Proposé par: <%= @event.user.first_name %></li>
		<li class="list-group-item">Commence le: <%= @event.start_date %></li>
		<li class="list-group-item">On se retrouve où ? <%= @event.location %></li>
		<li class="list-group-item">Prix: <%= @event.price %> €</li>
	</ul>

	<% if current_user %>
		<% if @event.price > 0 %>
			<% unless @event.user == current_user || @event.is_coming?(current_user) %>
				<p><%= link_to "Join this event", new_charge_path(id: @event.id), class: "btn btn-primary", role: "button" %></p>
			<% end %>

		<% else %>
			<% unless @event.user == current_user || @event.is_coming?(current_user) %>
				<p><%= button_to 'Join free event', create_attendance_path(id: @event.id), class:"btn btn-success" %></p>
			<% end %>
		<% end %>
	<% end %>

	<% if current_user %>
	<% if @event.user == current_user %>
	<p><%= link_to "Your event", root_path, class: "btn btn-primary", role: "button" %></p>
	<% end %>
	<% end %>


</div>
